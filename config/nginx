server {
    listen 80;
    server_name api.zvms.site;

    location / {
        proxy_pass http://127.0.0.1:8000;  # Proxy requests to Uvicorn
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

server {
    listen 443 ssl;
    server_name api.zvms.site;

    ssl_certificate /etc/ssl/certs/api_zvms_site.crt;  # Path to your SSL certificate
    ssl_certificate_key /etc/ssl/private/api_zvms_site.key;  # Path to your SSL key

    location / {
        proxy_pass http://127.0.0.1:8000;  # Proxy requests to Uvicorn
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
